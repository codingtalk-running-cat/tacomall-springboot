<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store.tacomall.mapper.admin.AdminAuthRouteMapper">

    <resultMap id="route" type="store.tacomall.entity.admin.AdminAuthRoute">
        <id property="id" column="id"></id>
    </resultMap>

    <select id="getRoutesByRoleId" resultMap="route">
        SELECT aar.id, aar.name
        FROM admin_auth_role_mapping_route aarmr
        LEFT JOIN admin_auth_route aar
        ON aarmr.route_id = aar.id
        WHERE aarmr.role_id = #{roleId}
    </select>

</mapper>