<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.codingtalk.tacomallmapper.merchant.MerchantUserMapper">

    <resultMap id="getUserInfo" type="cn.codingtalk.tacomallentity.merchant.MerchantUser">
        <id property="id" column="id" />
        <id property="username" column="username" />
    </resultMap>

    <select id="getUserInfo" resultMap="getUserInfo">
        SELECT *
        FROM merchant_user au
        WHERE au.id = #{id}
    </select>

</mapper>